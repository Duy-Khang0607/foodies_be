# MongoDB Configuration 
# Uncomment và thay đổi URI phù hợp với MongoDB của bạn
MONGO_URI=mongodb://localhost:27017/foodies_db

# Hoặc nếu dùng MongoDB Atlas
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/foodies_db

# Server Configuration  
PORT=3000

# Environment
NODE_ENV=development

# JWT Configuration
JWT_ACCESS_SECRET=foodies-access-secret-key-2024-change-in-production
JWT_REFRESH_SECRET=foodies-refresh-secret-key-2024-change-in-production
JWT_EMAIL_SECRET=foodies-email-secret-key-2024-change-in-production

# JWT Expiration Times
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_EMAIL_EXPIRES_IN=24h
JWT_PASSWORD_RESET_EXPIRES_IN=1h

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Foodies App" <your-email@gmail.com>

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000